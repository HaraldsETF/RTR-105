#include<stdio.h>
int main()
{
 int n, i;
 int a;
 int f = 1;
 i = 1;
 char f2 = 1;
 long long f3 = 1;
 
 printf("Ievadi decimālu skaitli: "); fflush(stdout);
 scanf("%d",&n);
 printf("Izvēlies, kuru datu tipu lietosi(1=int, 2=char, 3=long long): "); fflush(stdout);
 scanf("%d",&a);
 
if(a<2)
 {
  while(i <= n)
  {
   f = f * i;
   i++;
  }
   printf("(pēc 12 nav pareizi)Fakrotiāls no ievadītā cipara: %d\n",f);
 }
 
if(a==2)
 {
  while(i <= n)
  {
   f2 = f2 * i;
   i++;
  }
   printf("(pēc 5 nav pareizi)Fakrotiāls no ievadītā cipara1: %d\n",f2);
 }
 
if(a>2)
 {
  while(i <= n)
  {
   f3 = f3 * i;
   i++;
  }
   printf("(pēc 20 nav pareizi)Fakrotiāls no ievadītā cipara2: %lld\n",f3);
 }
 
}
